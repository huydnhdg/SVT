@model List<WebBHDTCHUNG.Areas.Admin.Data.ActiveViewModel>
@{
    ViewBag.Title = "Kích hoạt qua File Excel";
    int index = 0;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Kích hoạt Sản phẩm qua File</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="box-filter">
    <p>Upload danh sách sản phẩm</p>
    @using (Html.BeginForm("ActiveFile", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div style="margin:10px 0px;line-height:30px;" class="container">
            <div class="form-group">
                <input class="form-control" type="file" name="UploadedFile" placeholder="" />
                @if (ViewBag.mess != null)
                {
                    <p class="text-danger">@ViewBag.mess</p>
                }
            </div>
            <div class="form-group">
                <button type="submit" name="Submit" class="btn btn-warning"><i class="fa fa-magic" aria-hidden="true"></i> Upload file</button>
                <a class="btn btn-danger" href="~/Data/template_active_product.xlsx" download="/template_active_product"><i class="fa fa-file-excel-o"></i> File mẫu</a>
            </div>
        </div>
    }
</div>
@if (Model != null)
{


    <div class="box-filter">
        <div class="table-responsive">
            <table class="table-bordered table">
                <thead>
                    <tr>
                        <th>stt</th>
                        <th>serial</th>
                        <th>ngày mua hàng</th>
                        <th>sdt khách hàng</th>
                        <th>tên khách hàng</th>
                        <th>địa chỉ</th>
                        <th>quận/huyện</th>
                        <th>tỉnh/thành phố</th>
                        <th>đại lý</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        index++;
                        <tr>
                            <td>@index</td>
                            <td>@item.Serial</td>
                            <td>@item.Buydate</td>
                            <td>@item.CustomerPhone</td>
                            <td>@item.CustomerName</td>
                            <td>@item.CustomerAddress</td>
                            <td>@item.CustomerDistrict</td>
                            <td>@item.CustomerCity</td>
                            <td>@item.Activeby</td>
                            <td>@item.ProductName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}